pipeline {
    agent any
	environment {
		dockerImage =''
		registry = "fabien123/jenkins_project" 
	        registryCredential = 'dockerhub' 
			
	}
	
    stages {
	    stage('Scm Checkout') {
		    steps {
			    checkout scm
		    }
	    }
	    
	    stage('Building our image') { 
            	steps { 
                	script { 
                    		dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                	}
            	} 
           }
	    
	    
	   
    }
}
